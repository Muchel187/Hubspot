# HubSpot OAuth 2.0 Configuration (REQUIRED)
HUBSPOT_CLIENT_ID=your-client-id-here
HUBSPOT_CLIENT_SECRET=your-client-secret-here
HUBSPOT_REDIRECT_URI=http://localhost:3000/auth/callback

# Server Configuration
PORT=3000
NODE_ENV=development

# Dashboard URL (for CORS)
DASHBOARD_URL=http://localhost:5173

# Optional: HubSpot Portal ID (auto-detected via OAuth)
HUBSPOT_PORTAL_ID=

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret

# Database (for token storage in production)
DATABASE_URL=sqlite://tokens.db